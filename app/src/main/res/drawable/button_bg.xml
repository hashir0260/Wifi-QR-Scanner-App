<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black_light"/>
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="@dimen/_7sdp" />

        </shape>
    </item>
    <!-- Shadow -->
    <item android:top="@dimen/_10sdp"
        android:right="@dimen/_10sdp" android:bottom="@dimen/_10sdp" android:left="@dimen/_10sdp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/_7sdp"/>
        </shape>
    </item>
</layer-list>